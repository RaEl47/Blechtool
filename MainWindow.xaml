<Window x:Class="Blechtool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blechtool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Blechrechner" HorizontalAlignment="Center"/>
            <Label Content="Werkstoff:"/>
            <WrapPanel>
                <RadioButton Content="1.4301" Margin="10"/>
                <RadioButton Content="1.4404" Margin="10"/>
            </WrapPanel>            
            <Label Content="Oberfläche:"/>
            <ComboBox Name="cbo_Box_Surface" Width="200" HorizontalAlignment="Left">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Surface}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Label Content="Dicke"/>
            <ComboBox Name="cbo_Box_Thickness" Width="200" HorizontalAlignment="Left">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Thickness}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <WrapPanel Margin="0,10,0,0">
                <Label Content="Breite:"/>
                <TextBox Name="txt_Width" Width="100" HorizontalAlignment="Left" PreviewTextInput="txt_Width_PreviewTextInput" SelectionChanged="txt_Width_SelectionChanged"/>                
            </WrapPanel>
            <WrapPanel Margin="0,10,0,0">
                <Label Content="Länge:"/>
                <TextBox Name="txt_Length" Width="100" HorizontalAlignment="Left"/>
            </WrapPanel>
            <WrapPanel>
                <Label Content="Kosten:" Margin="0,50"/>
                <TextBox Margin="0,50" Width="100" Background="LightGray"/>
            </WrapPanel>            
        </StackPanel>
        
    </Grid>
</Window>
